{
  "manifest_version": 3,
  "name": "Copy with Link",
  "version": "1.0",
  "description": "A browser extension that adds copies the selected text with a link to the page",
  "permissions": [
    "contextMenus",
    "storage"
  ],
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }],
  "externally_connectable": {
    "matches": ["*://*/*"]
  }  
}
